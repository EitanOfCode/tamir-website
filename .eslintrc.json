{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["plugin:flowtype/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "flowtype"],
  "rules": {
    "flowtype/no-types-missing-file-annotation": 0
  }
}
